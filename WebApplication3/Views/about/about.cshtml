@model WebApplication3.Models.About
@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-circle shadow" alt="@Model.Name" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p>
                <a href="@Model.LinkedInUrl" class="btn btn-primary me-2" target="_blank">LinkedIn</a>
                <a href="@Model.GitHubUrl" class="btn btn-dark me-2" target="_blank">GitHub</a>
                <a href="@Model.ResumeUrl" class="btn btn-outline-secondary" target="_blank">View Resume</a>
            </p>
        </div>
    </div>
</div>
